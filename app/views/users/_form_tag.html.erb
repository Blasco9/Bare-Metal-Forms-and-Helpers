<%= form_tag '/user' do %>
  <%= label_tag 'user_username', 'Username' %><br>
  <%= text_field_tag 'user[username]' %><br>
  <%= label_tag 'user_email', 'Email' %><br>
  <%= text_field_tag 'user[email]' %><br>
  <%= label_tag 'user_password', 'Password' %><br>
  <%= password_field_tag 'user[password]' %><br>
  <%= submit_tag 'Submit' %>
<% end %>